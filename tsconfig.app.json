/*
    항목	설명
    tsconfig.json : 	프로젝트 전역 참조 파일 (빌드 직접 영향 없음)
    tsconfig.app.json	: React 앱 코드 빌드에 실제로 적용되는 설정
*/
{
  "compilerOptions": {
   // "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false, // 이거 수정함 : true였음
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".", //추가
    "paths": { // 추가
      "@/*" :["src/*"]
    },

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },
  "include": ["src", "vite.config.ts", "vite.env.d.ts", "src/types" ] 
}
